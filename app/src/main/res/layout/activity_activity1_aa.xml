<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity1Aa"
    android:orientation="vertical"
    android:background="@color/black">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/back5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textColor="@color/black"
                android:backgroundTint="@color/color1"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lesson1"
                android:textSize="24dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/HeaderColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">


                <WebView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/webView"
                    tools:ignore="MissingContainers"/>


            <TextView
                android:id="@+id/textttA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="Hello"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/textttB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="Hello"
                android:textStyle="bold"
                android:layout_marginLeft="10dp" />
            <TextView
                android:id="@+id/textA"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="@string/lesson1.1"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textStyle="italic"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@color/color3"/>
            <TextView
                android:id="@+id/texttA"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/lesson1.1.1"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/HeaderColor" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/textttC"
                    android:textColor="@color/textColor"
                    android:text="Hello"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:src="@drawable/lesson1a2"
                    android:id="@+id/image2"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textttD"
                android:textColor="@color/textColor"
                android:text="Hello"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>