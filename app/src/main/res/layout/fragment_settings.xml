<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment"
    android:orientation="vertical">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Настройки"
      android:textColor="@color/color2"
      android:layout_marginLeft="25dp"
      android:layout_marginTop="10dp"
      android:textSize="40sp" />
  <LinearLayout
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/about_app"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_about_app_foreground" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="О приложении"
        android:textColor="@color/color2"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        android:id="@+id/settings_about_app"
        android:background="@drawable/list_item_border"
        android:layout_marginBottom="10dp"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <ImageView
        android:id="@+id/how_to_play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_how_to_play_foreground" />

    <TextView
        android:id="@+id/how_to_use_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Как пользоваться приложением"
        android:textColor="@color/color2"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        android:background="@drawable/list_item_border"
        />
  </LinearLayout>



</LinearLayout>