<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity1Aa"
    android:orientation="vertical"
    android:background="@color/black">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_marginLeft="8dp"
                android:id="@+id/back1bB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textColor="@color/black"
                android:backgroundTint="@color/color1"/>

            <TextView
                android:id="@+id/Header1bB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lesson2"
                android:textSize="24dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/HeaderColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">


                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:src="@drawable/drop_rock"/>


                <TextView
                    android:id="@+id/text1bB_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:text="Hello"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/text1bB_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="Hello"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/texttA"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Сила тяжести"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/HeaderColor" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/text1bB_3"
                    android:textColor="@color/textColor"
                    android:text="Hello"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:src="@drawable/isaak_nyuton"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text1bB_4"
                android:textColor="@color/textColor"
                android:text="Hello"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/text1bB_5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textStyle="italic"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@color/color3"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>